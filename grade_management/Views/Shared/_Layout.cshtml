                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index">
                                <i class="bi bi-house"></i> Bảng điều khiển
                            </a>
                        </li>
                    }
                    else if (User.IsInRole(SD.Role_User))
