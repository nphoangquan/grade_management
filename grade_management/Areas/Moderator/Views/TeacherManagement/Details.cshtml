@model grade_management.Models.TeacherModel

@{
    ViewData["Title"] = "Chi tiết giảng viên";
}

<div class="container">
    <h1 class="page-title">Chi tiết giảng viên</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="section-title">Thông tin cá nhân</h5>
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Tên</div>
                            <div class="col-md-8">@Model.TeacherName</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Giới tính</div>
                            <div class="col-md-8">@(Model.TeacherSex == "Male" ? "Nam" : Model.TeacherSex == "Female" ? "Nữ" : Model.TeacherSex)</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Email giảng viên</div>
                            <div class="col-md-8">@Model.TeacherEmail</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-area="Moderator" asp-controller="TeacherManagement" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: 1px solid var(--border-color);
            border-radius: 8px;
            background: white;
        }

        .card-body {
            padding: 2rem;
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid var(--border-color);
        }

        .text-muted {
            color: var(--text-secondary) !important;
            font-weight: 500;
        }

        .btn-secondary {
            background-color: #e9ecef;
            border: none;
            color: var(--text-secondary);
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-weight: 500;
            transition: all var(--transition-speed) ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-secondary:hover {
            background-color: #dee2e6;
            color: var(--text-primary);
        }

        .btn-add {
            background-color: var(--primary-color);
            border: none;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-weight: 500;
            transition: all var(--transition-speed) ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-add:hover {
            background-color: var(--primary-dark);
            transform: translateY(-1px);
        }

        .gap-2 {
            gap: 0.5rem !important;
        }
    </style>
} 