@model grade_management.Models.DashboardViewModel
@{
    ViewData["Title"] = "Bảng điều khiển";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- User Profile Information -->
@if (ViewBag.HasStudentAccount == true)
{
    var studentInfo = ViewBag.StudentInfo as grade_management.Models.StudentModel;
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-graduation-cap me-2"></i>
                <strong>Chào mừng, @studentInfo.StudentName!</strong> 
                Bạn đã đăng nhập với tài khoản sinh viên (ID: @studentInfo.StudentCode) trong lớp @studentInfo.Class?.ClassName.
                <a asp-area="User" asp-controller="StudentProfile" asp-action="Index" class="btn btn-sm btn-outline-primary ms-2">
                    Xem hồ sơ của tôi
                </a>
            </div>
        </div>
    </div>
}
else if (ViewBag.HasTeacherAccount == true)
{
    var teacherInfo = ViewBag.TeacherInfo as grade_management.Models.TeacherModel;
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-success">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                <strong>Chào mừng, @teacherInfo.TeacherName!</strong> 
                Bạn đã đăng nhập với tài khoản giảng viên với quyền quản trị.
                <a asp-area="User" asp-controller="TeacherProfile" asp-action="Index" class="btn btn-sm btn-outline-success ms-2">
                    Xem hồ sơ của tôi
                </a>
            </div>
        </div>
    </div>
}

<!-- Page Title -->
<div class="page-title">
    Hệ thống quản lý điểm
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="dashboard-card stat-card">
            <div class="stat-number" data-value="@Model.StudentCount">0</div>
            <div class="stat-label">Sinh viên</div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="dashboard-card stat-card">
            <div class="stat-number" data-value="@Model.TeacherCount">0</div>
            <div class="stat-label">Giảng viên</div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="dashboard-card stat-card">
            <div class="stat-number" data-value="@Model.SubjectCount">0</div>
            <div class="stat-label">Môn học</div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="dashboard-card stat-card">
            <div class="stat-number" data-value="@Model.AverageGPA">0</div>
            <div class="stat-label">Điểm trung bình</div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Quick Actions -->
    <div class="col-lg-4 mb-4">
        <div class="dashboard-card">
            <div class="section-title">Thao tác nhanh</div>
            
            <a asp-area="User" asp-controller="StudentManagement" asp-action="Index" class="action-link">
                <i class="fas fa-user me-2"></i>
                <strong>Xem sinh viên</strong>
                <div class="text-muted small">Xem thông tin sinh viên</div>
            </a>
            
            <a asp-area="User" asp-controller="GradeManagement" asp-action="AllStudents" class="action-link">
                <i class="fas fa-eye me-2"></i>
                <strong>Xem điểm</strong>
                <div class="text-muted small">Xem kết quả học tập</div>
            </a>
            
            <a asp-area="User" asp-controller="SubjectManagement" asp-action="Index" class="action-link">
                <i class="fas fa-book me-2"></i>
                <strong>Xem môn học</strong>
                <div class="text-muted small">Xem thông tin môn học</div>
            </a>
            
            <a asp-area="User" asp-controller="ClassManagement" asp-action="Index" class="action-link">
                <i class="fas fa-users me-2"></i>
                <strong>Xem lớp</strong>
                <div class="text-muted small">Xem thông tin lớp</div>
            </a>
        </div>
    </div>
    
    <!-- Grade Distribution Section -->
    <div class="col-lg-8 mb-4">
        <div class="dashboard-card">
            <div class="section-title">Phân phối điểm</div>
            <div class="grade-distribution">
                <div class="row">
                    <div class="col-md-6">
                        <div class="grade-chart-container">
                            <canvas id="gradeDistributionChart"></canvas>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="grade-legend">
                            <div class="grade-item">
                                <span class="grade-dot a-grade"></span>
                                <span class="grade-label">A (8.5-10.0)</span>
                            </div>
                            <div class="grade-item">
                                <span class="grade-dot b-plus-grade"></span>
                                <span class="grade-label">B+ (7.8-8.4)</span>
                            </div>
                            <div class="grade-item">
                                <span class="grade-dot b-grade"></span>
                                <span class="grade-label">B (7.0-7.7)</span>
                            </div>
                            <div class="grade-item">
                                <span class="grade-dot c-plus-grade"></span>
                                <span class="grade-label">C+ (6.3-6.9)</span>
                            </div>
                            <div class="grade-item">
                                <span class="grade-dot c-grade"></span>
                                <span class="grade-label">C (5.5-6.2)</span>
                            </div>
                            <div class="grade-item">
                                <span class="grade-dot d-plus-grade"></span>
                                <span class="grade-label">D+ (4.8-5.4)</span>
                            </div>
                            <div class="grade-item">
                                <span class="grade-dot d-grade"></span>
                                <span class="grade-label">D (4.0-4.7)</span>
                            </div>
                            <div class="grade-item">
                                <span class="grade-dot f-plus-grade"></span>
                                <span class="grade-label">F+ (3.0-3.9)</span>
                            </div>
                            <div class="grade-item">
                                <span class="grade-dot f-grade"></span>
                                <span class="grade-label">F (0.0-2.9)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

